{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "Node16",
    "module": "CommonJS",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["./src/**/*"]
}